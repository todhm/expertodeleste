    .toast-text-content-wrapper {
      overflow: hidden;
    }

    @include screen($small) {
      max-width: 100%;
      right: 0;
      bottom: 0;
      left: 0;
      width: 100%;
      border-radius: 0;
      border-right: 0;
      border-left: 0;
      border-bottom: 0;
    }

    &.nt-open {
      display: block;
      @include animated(fadeInUp, $transitionDurationFast);
