    &::before,
    &::after {
      @include iconFontStack;
      font-size: $iconFontSize-md;
      line-height: $iconFontSize-md;
      position: absolute;
      top: 0;
      left: 0;
      display: block;
    }
  }

  input[type="checkbox"],
  input[type="radio"] {
    @include visuallyHidden;
    z-index: -1;
    opacity: 0 !important;

    &[disabled],
    &.disabled {
      ~label {
        cursor: default;

        &::before,
        &::after {
          cursor: default;
          opacity: $opacity;
        }
      }
    }

    &:checked {
      ~label {
        &::before,
        &::after {
          color: $colorPrimary;
        }
      }
    }
  }
}

