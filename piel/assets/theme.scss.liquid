  @include checkboxRadio;
  input[type="checkbox"] {
    &:checked {
      ~label {
        &::after {
          content: "check_box";
        }
      }
    }
  }

  label {
    &::after {
      content: "check_box_outline_blank";
    }
  }
}

@mixin radio {
