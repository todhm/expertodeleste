      }
    }

    &.selected-image-upsell_bundles:before {
      opacity: 1;
    }
  }

  .image-link-upsell_bundles {
    opacity: $opacity / 2;
  }

  .selected-image-upsell_bundles .image-link-upsell_bundles {
    opacity: 1;
    @include hovers;
  }

  .form-item-upsell_bundles {
    @include display-flexbox();
    @include align-items(center);

    & + .form-item-upsell_bundles {
      margin-top: $spacer;
    }

    @include screen($small) {
      @include flex-direction(column);
      @include align-items(flex-start);

      & + .form-item-upsell_bundles {
        margin-top: $spacer;
      }
    }
  }

  .box-wrap-upsell_bundles {
    max-width: 50%;
    @include flex-shrink(0);

    @include screen($small) {
      max-width: 100%;
    }
  }

  .label-upsell_bundles {
    max-width: 100%;
  }

  .current-form-upsell_bundles .box-wrap-upsell_bundles {
    cursor: default;

    &:hover {
      opacity: 1;
    }
  }

  .form-upsell_bundles {
    margin-left: $spacer-sm;
    @include display-flexbox();
    @include align-items(center);

    @include screen($small) {
      width: 100%;
      margin-left: 0;
      margin-top: $spacer-xs;
    }
  }

  .review-badge {
    display: inline-block;
    margin-left: $spacer-sm;
  }

  .ub-position-product {
    @include screenUp($postSmall) {
      .section-header {
        text-align: left;
      }

      .total-wrapper-upsell_bundles {
        width: auto;
      }
    }
  }

  @mixin mobileStyle {
    .image-item-upsell_bundles {
      @include flex(1);

      & + .image-item-upsell_bundles {
        &:before {
          left: 0;
          font-size: $baseFontSize-sm;
          width: $gutter-sm;
        }
      }
    }

    .btn-upsell_bundles {
      width: 100%;
    }

    .select-upsell_bundles {
      width: 100%;
    }

    .form-upsell_bundles {
      @include flex(auto);
    }

    .total-wrapper-upsell_bundles {
      text-align: center;
      @include flex(0 0 100%);

      & > div {
        @include justify-content(center);
      }
    }

    .review-badge {
      display: none;
    }
  }

  .ub-position-button {
    @include mobileStyle;
    margin-top: $spacer;
    border: none;

    .wrapper, .box {
      padding: 0;
    }

    .section-header {
      margin-bottom: $headerMarginBottom;

      &::after {
        display: none;
      }
    }

    .total-wrapper-upsell_bundles {
      & > div {
        width: 100%;
      }
    }
  }

  @include screen($small) {
    @include mobileStyle;
  }
}
{%- endif -%}
/* end-dbtfy-upsell-bundles */

